rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  match /users/{document} {
      allow read: if true
      allow create: if request.auth.uid != null
      match /users/{document}/{roles} {
        allow read: if true
        allow update: if request.auth.uid == "Fd0zIRwuXLPvPPLfF5awVKFv6uo2"
      }
    }
  match /pendingGames/{document} {
  allow read: if true
  allow create: if request.auth.uid != null
  }
  match /games/{document}{
  allow read: if true
  allow create: if request.auth.uid =="Fd0zIRwuXLPvPPLfF5awVKFv6uo2"
  }
  
   
  }
}